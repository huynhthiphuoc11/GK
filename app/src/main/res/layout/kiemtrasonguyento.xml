<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".kiemtrasonguyento">

    <TextView
        android:layout_marginTop="-220dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Kiểm tra số nguyên tố"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Nhập số cần kiểm tra"
        android:inputType="number"
        android:minHeight="48dp"/>

    <!-- Hàng ngang chứa nút "Kiểm tra", "Reset" và "Back" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <!-- Nút "Kiểm tra" -->
        <Button
            android:id="@+id/buttonCheckPrime"
            android:layout_width="105dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E43636"
            android:text="Kiểm tra" />

        <!-- Khoảng cách giữa hai nút -->
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <!-- Nút "Reset" -->
        <Button
            android:id="@+id/buttonReset"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E43636"
            android:text="Xoá" />

        <!-- Khoảng cách giữa hai nút -->
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <!-- Nút "Back" -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E43636"
            android:text="Quay lại" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
