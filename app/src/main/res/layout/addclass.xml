<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addclass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="quanlilophoc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="60dp"
        android:text="Thêm Lớp Học"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextMaLop"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="56dp"
            android:layout_marginTop="0dp"
            android:hint="Mã lớp"
            android:minHeight="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="3dp">

        <EditText
            android:id="@+id/editTextTenLop"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Tên lớp"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:minHeight="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="3dp">

        <EditText
            android:id="@+id/editTextSiSo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Sĩ số"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:inputType="number"
            android:minHeight="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="3dp">

        <EditText
            android:id="@+id/editTextKhoa"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:hint="Khoa"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:inputType="number"
            android:minHeight="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <!-- Nút "Kiểm tra" -->
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#3F51B5"
            android:text="Thêm" />

        <!-- Khoảng cách giữa hai nút -->
        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content" />


        <!-- Nút "Back" -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F51B5"
            android:text="Quay lại" />
    </LinearLayout>

</LinearLayout>
